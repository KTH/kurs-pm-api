{
  "//": "The production flag is added in the jenkins build script.",
  "name": "kurs-pm-api",
  "version": "2.0.0",
  "description": "Kurs-pm-api is an alternative api to upload memo as PDF and used by kurs-pm-admin-web",
  "main": "app.js",
  "scripts": {
    "codefix": "pretty-quick",
    "codecheck": "pretty-quick",
    "test-ci": "is-ci \"test\" \"test:watch\"",
    "test": "NODE_ENV=test jest test/*/*.js",
    "test:watch": "NODE_ENV=test jest test/*/*.js --watch",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development nodemon app.js"
  },
  "dependencies": {
    "@kth/kth-node-cosmos-db": "^3.0.6",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "component-registry": "^1.3.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.1",
    "kth-node-access-log": "^0.2.2",
    "kth-node-api-common": "^1.0.4",
    "kth-node-api-key-strategy": "^1.0.9",
    "kth-node-configuration": "^2.0.3",
    "kth-node-express-routing": "^2.0.5",
    "kth-node-log": "^3.1.3",
    "kth-node-mongo": "^3.3.9",
    "kth-node-monitor": "^1.1.9",
    "kth-node-server": "^3.1.2",
    "mongoose": "^5.11.19",
    "passport": "^0.4.1",
    "safe-utils": "1.0.1",
    "saslprep": "^1.0.3",
    "swagger-ui-dist": "^3.45.1"
  },
  "devDependencies": {
    "@kth/eslint-config-kth": "^1.0.10",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "husky": "^4.3.8",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "is-ci-cli": "^2.1.2",
    "jest": "^26.6.3"
  },
  "engines": {
    "node": "14.0.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
