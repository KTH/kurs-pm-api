{
  "//": "The production flag is added in the jenkins build script.",
  "name": "node-api",
  "version": "2.0.0",
  "description": "Node.js based API template application.",
  "main": "app.js",
  "private": true,
  "scripts": {
    "codecheck": "standard",
    "codefix": "standard --fix",
    "test": "mocha --exit test/**/*.js",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development nodemon app.js"
  },
  "dependencies": {
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "co": "^4.6.0",
    "component-registry": "^1.0.0-rc.6",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "kth-node-access-log": "KTH/kth-node-access-log.git#v1.0.0",
    "kth-node-api-common": "^0.1.5",
    "kth-node-api-key-strategy": "^1.0.6",
    "kth-node-configuration": "^1.6.4",
    "kth-node-express-routing": "^0.4.0",
    "kth-node-log": "^3.0.2",
    "kth-node-mongo": "^3.1.0",
    "kth-node-monitor": "^0.1.10",
    "kth-node-server": "^3.1.1",
    "mongoose": "^5.3.2",
    "passport": "^0.4.0",
    "safe-utils": "0.2.1",
    "swagger-ui": "^2.2.10"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "husky": "^1.1.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "proxyquire": "^2.1.0",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": "8.12.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run codecheck && npm run test"
    }
  }
}
