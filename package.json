{
  "//": "The production flag is added in the jenkins build script.",
  "name": "kurs-pm-api",
  "version": "2.0.0",
  "description": "Kurs-pm-api is an alternative api to upload memo as PDF and used by kurs-pm-admin-web",
  "main": "app.js",
  "scripts": {
    "codefix": "pretty-quick",
    "codecheck": "pretty-quick",
    "test-ci": "is-ci \"test\" \"test:watch\"",
    "test": "NODE_ENV=test jest test/*/*.js",
    "test:watch": "NODE_ENV=test jest test/*/*.js --watch",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development nodemon app.js"
  },
  "dependencies": {
    "@kth/kth-node-cosmos-db": "^3.0.6",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "component-registry": "^1.3.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.0",
    "kth-node-access-log": "^0.2.0",
    "kth-node-api-common": "^1.0.1",
    "kth-node-api-key-strategy": "^1.0.9",
    "kth-node-configuration": "^2.0.1",
    "kth-node-express-routing": "^2.0.3",
    "kth-node-log": "^3.1.0",
    "kth-node-mongo": "^3.2.3",
    "kth-node-monitor": "^1.1.9",
    "kth-node-server": "^3.1.2",
    "mongoose": "^5.11.14",
    "passport": "^0.4.1",
    "safe-utils": "0.2.1",
    "swagger-ui-dist": "^3.41.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "is-ci-cli": "^2.2.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "engines": {
    "node": "14.0.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
