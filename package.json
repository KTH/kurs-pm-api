{
  "//": "The production flag is added in the jenkins build script.",
  "name": "kurs-pm-api",
  "version": "2.0.0",
  "description": "Node.js based API template application.",
  "main": "app.js",
  "private": true,
  "scripts": {
    "codecheck": "standard",
    "codefix": "standard --fix",
    "test": "mocha --exit test/**/*.js",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development nodemon app.js"
  },
  "dependencies": {
    "@kth/kth-node-cosmos-db": "^3.0.6",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "co": "^4.6.0",
    "component-registry": "^1.3.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.4",
    "kth-node-access-log": "^0.2.0",
    "kth-node-api-common": "^1.0.1",
    "kth-node-api-key-strategy": "^1.0.8",
    "kth-node-configuration": "^2.0.1",
    "kth-node-express-routing": "^2.0.3",
    "kth-node-log": "^3.0.2",
    "kth-node-mongo": "^3.2.3",
    "kth-node-monitor": "^1.1.6",
    "kth-node-server": "^3.1.2",
    "mongoose": "^5.7.11",
    "passport": "^0.4.0",
    "safe-utils": "0.2.1",
    "swagger-ui-dist": "^3.24.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "husky": "^3.0.9",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "proxyquire": "^2.1.3"
  },
  "engines": {
    "node": "8.12.0"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
