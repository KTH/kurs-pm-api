{
  "//": "The production flag is added in the jenkins build script.",
  "name": "kurs-pm-api",
  "version": "2.0.0",
  "description": "Node.js based API template application.",
  "main": "app.js",
  "private": true,
  "scripts": {
    "codefix": "pretty-quick",
    "test": "is-ci \"test:jest\" \"test:watch\"",
    "test:jest": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development nodemon app.js"
  },
  "dependencies": {
    "@kth/kth-node-cosmos-db": "^3.0.6",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "component-registry": "^1.3.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.4",
    "kth-node-access-log": "^0.2.0",
    "kth-node-api-common": "^1.0.1",
    "kth-node-api-key-strategy": "^1.0.9",
    "kth-node-configuration": "^2.0.1",
    "kth-node-express-routing": "^2.0.3",
    "kth-node-log": "^3.1.0",
    "kth-node-mongo": "^3.2.3",
    "kth-node-monitor": "^1.1.6",
    "kth-node-server": "^3.1.2",
    "mongoose": "^5.9.20",
    "passport": "^0.4.1",
    "safe-utils": "0.2.1",
    "swagger-ui-dist": "^3.27.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.5",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "is-ci-cli": "^2.1.2",
    "jest": "^26.1.0"
  },
  "engines": {
    "node": "12.0.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:jest",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
